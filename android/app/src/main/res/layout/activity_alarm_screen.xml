<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_alarm_background">
    <!-- Círculo decorativo superior -->
    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-100dp"
        android:background="@drawable/circle_pulse"
        android:alpha="0.3"/>
    <!-- Círculo decorativo inferior -->
    <View
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-80dp"
        android:layout_marginStart="-80dp"
        android:background="@drawable/circle_pulse"
        android:alpha="0.2"/>
    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">
        <!-- Icono de alarma -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏰"
            android:textSize="80sp"
            android:layout_marginBottom="24dp"/>
        <!-- Título principal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡ES HORA DE"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESPERTAR!"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.08"
            android:layout_marginBottom="16dp"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="8"/>
        <!-- Subtítulo motivacional -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Un nuevo día te espera ✨"
            android:textColor="#E0E0E0"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginBottom="60dp"/>
        <!-- Botón para detener alarma -->
        <Button
            android:id="@+id/stop_alarm_button"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:text="DETENER ALARMA"
            android:background="@drawable/button_stop_alarm"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:elevation="8dp"
            android:stateListAnimator="@null"/>
        <!-- Texto de ayuda -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pulsa el botón para apagar"
            android:textColor="#B0B0B0"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>
</RelativeLayout>
